<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:padding="16dp"
android:background="@drawable/bg1"
tools:context=".MainActivity">

    <ImageView

         android:id="@+id/img_2"
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aplikasi ini di rancang untuk mengenalkan alat-alat kesehatan dan kategori dari alat tersebut dan dapat memberikan informasi kepada orang - orang.Aplikasi pengenalan alat kesehatan ini memiliki potensi untuk memberikan dampak yang signifikan terhadap bidang kesehatan."
        android:fontFamily="@font/poppinsregular"
        android:padding="20dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:id="@+id/txt_2" />

    <Button
        android:id="@+id/btn_switch"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_2"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="LOGIN"
        android:onClick="onLogin"
        android:fontFamily="@font/poppinsbold"
        />

    <Button
        android:id="@+id/btn_move"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/txt_2"
        android:layout_marginTop="0dp"
        android:layout_gravity="center"
        android:text="REGISTER"
        android:fontFamily="@font/poppinsbold"
        />

</LinearLayout>